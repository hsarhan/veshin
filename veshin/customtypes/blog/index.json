			"uid": {
				"type": "UID",
				"config": {
					"label": "UID"
				}
			},
			"title": {
				"type": "Text",
				"config": {
					"label": "Title",
					"placeholder": ""
				}
			},
			"publish_date": {
				"type": "Date",
				"config": {
					"label": "Publish date",
					"placeholder": ""
				}
			},
			"featured_image": {
				"type": "Image",
				"config": {
					"label": "Featured Image",
					"constraint": {},
					"thumbnails": []
				}
			},
			"short_description": {
				"type": "StructuredText",
				"config": {
					"label": "Short Description",
					"placeholder": "",
